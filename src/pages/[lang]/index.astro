---
import Layout from '../../layouts/Layout.astro';
import esUI from '../../i18n/es.json';
import enUI from '../../i18n/en.json';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const ui = lang === 'es' ? esUI : enUI;

// Helper for background images to keep code clean
const bgStyle = (url) => `background-image: url('${url}');`;
---

<Layout lang={lang} title={ui.site.title} description={ui.site.description}>
  
  <!-- Floating Language Switcher -->
  <div class="fixed top-4 right-4 z-50 flex gap-2 bg-white/90 backdrop-blur-md rounded-full px-1.5 py-1.5 shadow-xl border border-white/20">
    <a 
      href="/es/" 
      class:list={[
        'px-4 py-2 rounded-full font-bold text-sm transition-all duration-300',
        lang === 'es' ? 'bg-orange-600 text-white shadow-lg' : 'text-gray-500 hover:bg-gray-100'
      ]}
    >
      ES
    </a>
    <a 
      href="/en/" 
      class:list={[
        'px-4 py-2 rounded-full font-bold text-sm transition-all duration-300',
        lang === 'en' ? 'bg-orange-600 text-white shadow-lg' : 'text-gray-500 hover:bg-gray-100'
      ]}
    >
      EN
    </a>
  </div>

  <main class="min-h-screen bg-gray-50 p-4 md:p-8 font-sans pb-24">
    
    <!-- Header / Logo Area -->
    <div class="flex flex-col items-center justify-center py-6 mb-6">
       <div class="relative w-24 h-24 md:w-32 md:h-32 rounded-full overflow-hidden shadow-2xl border-4 border-white mb-4">
           <img src="/assets/logo.jpg" alt="Soda Maricela Logo" class="w-full h-full object-cover" />
       </div>
       <h1 class="font-serif text-3xl md:text-4xl font-black text-gray-900 text-center leading-tight">
         Soda <span class="text-orange-600">Maricela</span>
       </h1>
       <p class="text-gray-500 text-sm font-medium tracking-wide uppercase mt-1">Quepos, Costa Rica</p>
    </div>

    <!-- Bento Grid Layout -->
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4 auto-rows-min">
      
      <!-- HERO BLOCK (Large) -->
      <div class="group relative md:col-span-2 lg:col-span-2 row-span-2 rounded-[2rem] overflow-hidden shadow-lg h-[400px] md:h-[500px]">
        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110" style={bgStyle('/assets/casado-tipico.webp')}></div>
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/30 to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-8 text-white">
          <span class="inline-block px-3 py-1 bg-orange-600 text-white text-xs font-bold rounded-full mb-3 uppercase tracking-wider">
            {lang === 'es' ? 'Auténtico' : 'Authentic'}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold leading-tight mb-6 text-balance drop-shadow-lg">
            {ui.hero.subtitle}
          </h2>
          <a 
            href={`/menu_final_v4_${lang}.pdf`} 
            target="_blank" 
            class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-orange-600 to-red-600 text-white font-bold rounded-full shadow-xl hover:shadow-orange-500/50 transform hover:-translate-y-1 transition-all duration-300 border border-white/20 backdrop-blur-sm group-hover:scale-105"
          >
            <span>{ui.hero.menu_button}</span>
            <svg class="w-5 h-5 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
          </a>
        </div>
      </div>

      <!-- LOCATION BLOCK (Important for "Not Marcela" + "Mural") -->
      <div class="md:col-span-1 lg:col-span-2 bg-yellow-400 rounded-[2rem] p-6 flex flex-col justify-between shadow-lg relative overflow-hidden group">
        <!-- Weather Widget (Top Right) -->
        <div class="absolute top-6 right-6 z-20 flex flex-col items-end">
            <div class="flex items-center gap-2 bg-yellow-300/50 backdrop-blur-sm px-3 py-1.5 rounded-full border border-yellow-500/20">
                 <span class="text-3xl">☀️</span>
                 <div class="flex flex-col items-start leading-none">
                     <span class="text-sm font-bold text-yellow-950">30°C</span>
                     <span class="text-[9px] font-bold uppercase text-yellow-800">Manuel Antonio</span>
                 </div>
            </div>
        </div>

        <div class="relative z-10 max-w-[80%]">
          <div class="flex items-center gap-2 mb-2 text-yellow-900 opacity-70">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" /></svg>
            <span class="text-xs font-black uppercase tracking-widest">{lang === 'es' ? 'UBICACIÓN' : 'LOCATION'}</span>
          </div>
          <h3 class="text-xl font-bold text-yellow-950 mb-3 leading-snug" set:html={ui.bento.location.title} />
          <p class="text-yellow-900/90 text-sm leading-relaxed mb-4" set:html={ui.bento.location.body} />
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 mt-auto pt-4">
            <a href={ui.site.map_links.google_maps} target="_blank" class="relative z-10 w-full flex-1 bg-yellow-950 text-yellow-400 py-3 rounded-xl text-center font-bold text-sm hover:bg-black transition-colors shadow-lg hover:shadow-xl hover:-translate-y-0.5 transform">
              {ui.bento.location.google_maps_button}
            </a>
            <a href={ui.site.map_links.waze} target="_blank" class="relative z-10 w-full flex-1 bg-yellow-950 text-yellow-400 py-3 rounded-xl text-center font-bold text-sm hover:bg-black transition-colors shadow-lg hover:shadow-xl hover:-translate-y-0.5 transform">
              {ui.bento.location.waze_button}
            </a>
        </div>
        
        <!-- Decoration: Monstera Leaf Outline (Artistic Detail) -->
        <svg class="absolute -right-8 -bottom-12 w-64 h-64 text-yellow-500 opacity-20 transform rotate-12 transition-transform duration-700 group-hover:rotate-6 group-hover:scale-110" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12,2C12,2 12,22 12,22C12,22 2,18 2,12C2,6 6,2 12,2M12,2C12,2 22,6 22,12C22,18 12,22 12,22"/>
            <path d="M12,22C12,22 15,18 15,12M12,22C12,22 9,18 9,12" stroke="currentColor" fill="none" stroke-width="0.5"/>
        </svg>
      </div>

      <!-- FOUNDER BLOCK (Psychology: Trust & Warmth) -->
      <div class="md:col-span-1 lg:col-span-1 row-span-1 bg-white rounded-[2rem] p-6 shadow-sm border border-gray-100 flex flex-col">
        <div class="flex items-center gap-4 mb-4">
           <img src="/assets/dona-maricela.webp" alt="Doña Maricela" class="w-12 h-12 rounded-full object-cover border-2 border-orange-100" />
           <div>
             <h3 class="font-bold text-gray-900 text-sm">{ui.bento.founder.title}</h3>
             <p class="text-xs text-orange-600 font-medium">Founder</p>
           </div>
        </div>
        <p class="text-gray-600 text-xs leading-relaxed flex-grow">
          {ui.bento.founder.body}
        </p>
      </div>

      <!-- FOOD: CASADO -->
      <div class="group relative rounded-[2rem] overflow-hidden h-48 md:h-auto shadow-md">
        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105" style={bgStyle('/assets/casado-tipico.webp')}></div>
        <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition-colors"></div>
        <div class="absolute bottom-0 left-0 p-4 text-white">
          <span class="text-[10px] font-bold uppercase tracking-wider bg-white/20 backdrop-blur-sm px-2 py-1 rounded-md mb-2 inline-block">
             {ui.bento.food_casado.tag}
          </span>
          <h3 class="font-bold text-lg leading-tight">{ui.bento.food_casado.title}</h3>
        </div>
      </div>

      <!-- FOOD: GALLO PINTO -->
      <div class="group relative rounded-[2rem] overflow-hidden h-48 md:h-auto shadow-md">
        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105" style={bgStyle('/assets/gallo-pinto.webp')}></div>
        <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition-colors"></div>
        <div class="absolute bottom-0 left-0 p-4 text-white">
          <span class="text-[10px] font-bold uppercase tracking-wider bg-white/20 backdrop-blur-sm px-2 py-1 rounded-md mb-2 inline-block">
             {ui.bento.food_pinto.tag}
          </span>
          <h3 class="font-bold text-lg leading-tight">{ui.bento.food_pinto.title}</h3>
        </div>
      </div>

      <!-- REVIEWS / SOCIAL PROOF -->
      <div class="md:col-span-2 lg:col-span-2 bg-gradient-to-br from-orange-50 to-white rounded-[2rem] p-8 flex flex-col md:flex-row items-center gap-8 border border-orange-100 shadow-sm">
         
         <!-- Trust Badges (Visual Anchor) -->
         <div class="flex-shrink-0 flex flex-col items-center gap-3">
            <div class="flex -space-x-3">
               <!-- Google Icon -->
               <div class="w-12 h-12 rounded-full bg-white border-4 border-white shadow-md flex items-center justify-center p-2">
                 <img src="/assets/google-g.svg" alt="Google Reviews" class="w-full h-full object-contain" />
               </div>
               <!-- TripAdvisor Icon -->
               <div class="w-12 h-12 rounded-full bg-white border-4 border-white shadow-md flex items-center justify-center p-2">
                  <img src="/assets/tripadvisor.svg" alt="TripAdvisor" class="w-full h-full object-contain" />
               </div>
            </div>
            <div class="flex items-center gap-1 bg-white px-3 py-1 rounded-full shadow-sm border border-orange-100">
               <span class="text-xs font-bold text-gray-800">4.9</span>
               <div class="flex text-orange-400 text-[10px]">★★★★★</div>
            </div>
         </div>

         <!-- Testimonial Content -->
         <div class="text-center md:text-left flex-1">
           <div class="flex items-center justify-center md:justify-start gap-1 text-orange-500 mb-2">
             ★★★★★
           </div>
           <blockquote class="font-serif italic text-xl text-gray-800 mb-3 leading-relaxed">
             "{ui.bento.reviews.quote}"
           </blockquote>
           <div class="flex items-center justify-center md:justify-start gap-2">
             <span class="w-8 h-[1px] bg-orange-200"></span>
             <p class="text-[10px] text-gray-400 uppercase tracking-widest font-bold">{ui.bento.reviews.title}</p>
           </div>
         </div>
      </div>

    </div>

    <!-- CLOSING / CTA -->
    <div class="max-w-md mx-auto mt-12 text-center">
      <h2 class="font-serif text-2xl font-bold text-gray-900 mb-4">{ui.footer.cta_title}</h2>
      <div class="flex flex-col sm:flex-row gap-4 mt-6">
        <a 
          href={ui.site.map_links.google_maps} 
          target="_blank" 
          class="block w-full py-4 bg-gray-900 text-white rounded-2xl font-bold text-lg shadow-xl transform transition-transform active:scale-95 hover:-translate-y-1"
        >
          {ui.footer.cta_button_google}
        </a>
        <a 
          href={ui.site.map_links.waze} 
          target="_blank" 
          class="block w-full py-4 bg-orange-600 text-white rounded-2xl font-bold text-lg shadow-xl transform transition-transform active:scale-95 hover:-translate-y-1"
        >
          {ui.footer.cta_button_waze}
        </a>
      </div>
      <p class="mt-6 text-sm text-gray-400">
        &copy; {new Date().getFullYear()} Soda Maricela. {ui.footer.copyright}
      </p>
    </div>
  </main>
</Layout>