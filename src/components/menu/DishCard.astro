---
import type { PublicMenuItem } from '../../types';

interface Props {
  item: PublicMenuItem;
}

const { item } = Astro.props;
const { name, description, priceCRC } = item;

const USD_EXCHANGE_RATE = import.meta.env.USD_EXCHANGE_RATE || 515;
const priceUSD = (priceCRC / USD_EXCHANGE_RATE).toFixed(2);
---

<div transition:animate="fade" class="bg-off-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-transform duration-300 border border-gray-200 hover:shadow-xl">
  <div class="p-6">
    <h3 class="text-2xl font-serif text-dark-gray mb-2">{name}</h3>
    <p class="text-dark-gray font-sans mb-4">{description}</p>
    <div class="text-right text-xl font-bold text-primary font-sans">
      <span>â‚¡{priceCRC.toLocaleString('es-CR')}</span>
      <span class="text-sm text-gray-500 font-normal"> (~${priceUSD})</span>
    </div>
  </div>
</div>
