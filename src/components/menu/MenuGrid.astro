---
import { getMenuItemsGroupedByCategory } from '../../services/minio';
import DishCard from './DishCard.astro';

const groupedMenu = await getMenuItemsGroupedByCategory();
const categories = Object.keys(groupedMenu);
---

<section id="menu" class="py-20 px-4 md:px-8">
  <div class="max-w-7xl mx-auto">
    {categories.map(category => (
      <div class="mb-12">
        <h2 class="text-4xl font-serif text-center text-dark-gray mb-8">{category}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {groupedMenu[category].map(item => (
            <DishCard item={item} />
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
