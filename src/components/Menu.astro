---
const { menuData } = Astro.props;

const USD_RATE = 515; // Example fixed rate: 1 USD = 515 CRC

interface MenuItem {
  name: string;
  description: string;
  price_crc: number;
}

interface MenuCategory {
  name: string;
  items: MenuItem[];
}
---

<div class="space-y-12">
  {menuData.categories.map((category: MenuCategory) => (
    <section>
      <h3 class="text-3xl font-serif font-bold text-[#1F2937] border-b-2 border-[#EA580C] pb-2 mb-6">{category.name}</h3>
      <div class="space-y-6">
        {category.items.map((item: MenuItem) => (
          <div class="flex justify-between items-start">
            <div>
              <h4 class="text-xl font-bold font-sans">{item.name}</h4>
              <p class="text-md text-gray-600 max-w-md">{item.description}</p>
            </div>
            <div class="text-right flex-shrink-0 ml-4">
              <p class="text-lg font-bold text-[#EA580C]">â‚¡{item.price_crc.toLocaleString('es-CR')}</p>
              <p class="text-sm text-gray-500">(~${(item.price_crc / USD_RATE).toFixed(2)})</p>
            </div>
          </div>
        ))}
      </div>
    </section>
  ))}
</div>
